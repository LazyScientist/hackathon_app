<info@MDBoxLayout>:
    size_hint_y: None
    height: self.minimum_height
    spacing: dp(20)
    padding: dp(40)
    md_bg_color: app.theme_cls.primary_color
    orientation: "vertical"


    MDCard:
        radius: dp(20)
        size_hint_y: None
        height: self.width/2
        elevation: 20
        Video:
            source: os.path.join('assets','images','demo.mp4')

    MDRaisedButton:
        text: "Capture photo"
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: [1,0.93,0.196,1]
        elevation: 20

    MDBoxLayout:
        size_hint_y: None
        height: 20
        MDIcon:
            icon: 'quadcopter'
            color: [1,0.93,0.196,1]
        MDIcon:
            icon: 'run'
        MDIcon:
            icon: 'car'
        MDIcon:
            icon: 'helicopter'
        MDIcon:
            icon: 'tank'
        MDIcon:
            icon: 'dog'


    BoxLayout:
        size_hint_y: None
        height: dp(50)
        MDIcon:
            icon: 'heart'
            color: [1,0.93,0.196,1]
            size_hint_x: None
            width: 30
        MDLabel:
            text: str(health_progress_bar.value) + "%"
