            icon: 'battery-charging'
            color: [1,0.93,0.196,1]
            size_hint_x: None
            width: 30
        MDLabel:
            text: str(battery_progress_bar.value) + "%"
            size_hint_x: None
            width: 30
            color: [1,0.93,0.196,1]
        MDProgressBar:
